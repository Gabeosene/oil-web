      "",
      "[Booting OIL Framework]...",
      "↳ Initializing research modules...",
      "↳ Calibrating sensor arrays...",
      "↳ Loading machine learning models...",
      "↳ Checking innovation pipelines...",
      "↳ Verifying academic credentials...",
      "",
      "[Authenticating to Obuda University Network]...",
      "Username: OIL_user",
      "Password: *********",
      "[✔] Authentication success",
      "",
      "[Establishing session with university brain node]...",
      "↳ Link stable.",
      "↳ Uplink synchronized.",
      "",
      "[Launching main interface]...",
      "System ready. Welcome to the Obuda Innovation Laboratory (OIL)."
    ];

    const terminal = document.getElementById("terminal");
    let lineIndex = 0;

    function getRandomDelay(min = 10, max = 35) {
      return Math.floor(Math.random() * (max - min + 1)) + min;
    }

    function typeLine() {
      if (lineIndex < lines.length) {
        const line = lines[lineIndex];
        const lineElement = document.createElement("div");
        terminal.appendChild(lineElement);

        let charIndex = 0;
        function typeChar() {
          if (charIndex < line.length) {
            lineElement.textContent += line.charAt(charIndex);
            charIndex++;
            setTimeout(typeChar, getRandomDelay());
          } else {
            lineIndex++;
            setTimeout(typeLine, getRandomDelay(300, 800));
          }
        }
        typeChar();
      } else {
        setTimeout(() => {
          window.location.href = "/oilpage";
        }, 2000);
      }
    }

    window.onload = () => {
      typeLine();
      document.addEventListener("keydown", () => window.location.href = "/oilpage");
    };
  </script>
