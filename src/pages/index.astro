    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        font-family: "Courier New", Courier, monospace;
        background: #000;
        color: #ccc;
      }

      /* Make it obvious the screen is tappable on desktop */
      @media (pointer: fine) {
        body {
          cursor: pointer;
        }
      }

      /* Full-screen clickable overlay that lets users tap/click anywhere to enter */
      #enter-overlay {
        position: fixed;
        inset: 0;
        z-index: 1000000;
        background: transparent; /* invisible but clickable */
        display: block;
      }

      .boot-logo {
        padding: 2rem;
      }
      .boot-logo pre {
        margin: 0;
        font-size: 0.7rem;
        white-space: pre;
      }

      #terminal {
        white-space: pre-line;
        padding: 2rem;
        font-size: 0.8rem;
      }
    </style>
  </head>
  <body>
    <!-- Tap/click anywhere to enter immediately -->
    <a id="enter-overlay" href="/oilpage" aria-label="Enter site"></a>

    <div class="boot-logo">
